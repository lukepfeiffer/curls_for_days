%html
  %head
    %title CurlsForDay
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    %link{:href => "//fonts.googleapis.com/css?family=Questrial", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "//fonts.googleapis.com/css?family=Sanchez:400italic,400", :rel => "stylesheet", :type => "text/css"}

    %div.wrapper-for-content-outide-of-footer
      %header.navigation{role: "banner"}
        %div.navigation-wrapper
          %a.logo{href: "javascript:void(0)"}
            = image_tag "default_avatar.png", alt: 'Logo Image', href: '/'
          %a#js-mobile-menu.navigation-menu-button{href: "javascript:void(0)"} MENU

          %nav{role: 'navigation'}
            %ul.navigation-menu.show#js-navigation-menu
              %li.nav-link LINK
              %li.nav-link LINK
              - if current_user.blank?
                %li.nav-link= link_to 'Sign Up', new_user_path
              - else
                .dropdown
                  .dropdown-container
                    - if current_user.present? && current_user.blogger?
                      %p.dropdown-button Blogger Commands
                      %ul.dropdown-menu.dropdown-select
                        = link_to new_blog_post_path do
                          %li Add Post
                        = link_to root_path do
                          %li View Posts
                        = link_to root_path do
                          %li Edit Profile
                        = link_to sign_out_path, method: :delete do
                          %li Sign Out
                    - elsif current_user.present?
                      %p.dropdown-button User Commands
                      %ul.dropdown-menu.dropdown-select
                        = link_to blog_posts_path do
                          %li View Posts
                        = link_to root_path do
                          %li Edit Profile
                        = link_to sign_out_path, method: :delete do
                          %li Sign Out

          %div.navigation-tools
            %div.search-bar
              %form{role: 'search'}
                %input{name: 'search', type: 'search', placeholder: 'Search'}
                %button{type: 'submit'}
                  %img{src: "https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png", alt: "Search Icon"}
  - if params[:notice].present?
    %div{class: "#{@alert_class} alert"}
      %span= @alert_message

  %body#main
    %div#content= yield
