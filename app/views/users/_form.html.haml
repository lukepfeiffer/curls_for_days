%table#registry_table
  %tr.form-container
    %td.sign_up
      %p Sign Up
      = form_for user do |f|
        %fieldset
          %dl

            %dt= f.label :email
            %dd= f.text_field :email, placeholder: 'Email@example.com'

            %dt= f.label :username
            %dd= f.text_field :username

            %dt= f.label :password
            %dd= f.password_field :password

            %dt= f.label :password_confirmation
            %dd= f.password_field :password_confirmation

        %fieldset.actions
          = f.submit 'Sign Up'

    %td.sign_in
      %p Already have an account?
      = form_tag(sign_in_path) do
        %fieldset
          %dl
            %dt= label_tag :email
            %dd= text_field_tag :email, nil, placeholder: 'Email@exple.com', id: 'session_email'
            %dt= label_tag :password
            %dd= password_field_tag :password, nil, id: 'session_password'

        %fieldset.actions
          = submit_tag 'Sign In'
